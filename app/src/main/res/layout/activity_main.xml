<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"

    tools:context="fi.jamk.filtteri2.MainActivity">



    <RelativeLayout
        android:id="@+id/lay"
        android:layout_width="180dp"
        android:layout_centerInParent="true"
        android:layout_height="320dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/imageFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />



    </RelativeLayout>

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/b_take"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@+id/b_load"
        android:text="Take picture" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/b_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="LOAD"
        android:layout_toStartOf="@+id/b_save" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/b_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER 1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/b_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_alignBaseline="@+id/b_share"
        android:layout_alignBottom="@+id/b_share"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/b_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="SHARE" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/b_filter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER 2"
        android:layout_below="@+id/lay"
        android:layout_alignParentStart="true" />

</RelativeLayout>
